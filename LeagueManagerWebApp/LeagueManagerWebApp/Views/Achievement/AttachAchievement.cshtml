@model LeagueManagerWebApp.ViewModels.AchievementsViewModel
@{
    ViewData["Title"] = "AttachAchievement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AttachAchievement</h2>
<div class="container-fluid">
    <div class="row justify-content-center">
        <form asp-controller="Achievement" asp-action="SubmitAchievement" method="post">
            <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col">
                    Player name: <br />
                </div>
                <div class="col">
                    <select name="PlayerName">
                        @foreach (var elem in Model.Players)
                        {
                            <option value="@(elem.Name)">@(elem.Name)</option>
                        }
                    </select>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        Achievement name: <br />
                    </div>
                    <div class="col">
                        <select name="AchievementName">
                            @foreach (var elem in Model.Achievements)
                            {
                                <option value="@(elem.Name)">@(elem.Name)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        <input type="submit" />
                    </div>

                </div>
            </div>
            </div>
        </form>
    </div>
</div>
