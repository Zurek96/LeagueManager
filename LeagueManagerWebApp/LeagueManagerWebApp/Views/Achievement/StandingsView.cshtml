@model List<PlayerModel>
@{
    ViewData["Title"] = "StandingsView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
<div class="container">
    <div class="row justify-content-center">
        <h2 class="display-2">Ranking</h2>
    </div>
    <div class="row">
        <div class="col">
            <p>
                <a class="btn btn-lg btn-primary btn-block" asp-action="Index">Powrót</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Gracz
                        </th>
                        <th>
                            Wynik
                        </th>
                        <th>
                            Lista osiągnięć
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AchievementScore)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Achievements)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>  

