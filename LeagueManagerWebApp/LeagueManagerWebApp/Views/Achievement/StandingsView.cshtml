@model List<PlayerModel>
@{
    ViewData["Title"] = "StandingsView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="container">
        <div class="row justify-content-center">
            <h2 class="display-2">Ranking</h2>
        </div>
        <div class="row">
            <div class="col">
                <p>
                    <a class="btn btn-lg btn-primary btn-block" asp-action="Index">Powrót</a>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">
                                Gracz
                            </th>
                            <th scope="col">
                                Wynik
                            </th>
                            <th scope="col">
                                Lista osiągnięć
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row" data-label="Gracz">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td data-label="Wynik">
                                    @Html.DisplayFor(modelItem => item.AchievementScore)
                                </td>
                                <td data-label="Lista osiągnięć">
                                    @Html.DisplayFor(modelItem => item.Achievements)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>