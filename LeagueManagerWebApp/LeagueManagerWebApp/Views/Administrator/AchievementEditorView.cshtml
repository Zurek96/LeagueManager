@model AchievementModel
@{
    ViewData["Title"] = "AchievementEditorView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-top: 10%">
    <div class="row justify-content-center">
        <form asp-controller="Administrator" asp-action="EditAchievement" method="post">
            <fieldset>
                <legend>Achievement Editor</legend>
                <input type="hidden" value="@Model" name="Id" />
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col">
                            Player name: <br />
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col">
                            Description: <br />
                        </div>
                        <div class="col">
                            <textarea form="data" cols="20" rows="10" name="Description"></textarea>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col">
                            Points: <br />
                        </div>
                        <div class="col">
                            <input type="number" name="MatchesPlayed" />
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col">
                            <input class="btn btn-primary" type="submit" />
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>