
@{
    ViewData["Title"] = "AchievementsCreatorView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AchievementsCreatorView</h2>

<div class="container-fluid">
    <div class="row justify-content-center">
        <form id="data" asp-controller="Administrator" asp-action="CreateAchievement" method="post">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col">
                        Achievement name: <br />
                    </div>
                    <div class="col">
                        <input type="text" id="Name" name="Name" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        Description: <br />
                    </div>
                    <div class="col">
                        <textarea form="data" cols="20" rows="10" name="Description"></textarea>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        Points: <br />
                    </div>
                    <div class="col">
                        <input type="number" id="Points" name="Points" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        <input type="submit" />
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>