@model LeagueManagerWebApp.ViewModels.AdminViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body-content container-fluid">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="row justify-content-center">
                <div class="col">
                    <div class="btn">
                        <a class="btn btn-outline-primary btn-lg" href="@Url.Action("PlayerCreator", "Administrator")">Player Creator</a>
                    </div>
                </div>
                <div class="col">
                    <div class="btn">
                        <a class="btn btn-outline-primary btn-lg" href="@Url.Action("AchievementsCreator", "Administrator")">Achievements Creator</a>
                    </div>
                </div>
                <div class="col">
                    <div class="btn">
                        <a class="btn btn-outline-primary btn-lg" href="@Url.Action("LeagueCreator", "Administrator")">League Creator</a>
                    </div>

                </div>
            </div>

                <div class="col">
                    <div class="btn">
                        <a class="btn btn-outline-primary btn-lg" href="@Url.Action("LeagueStarter", "Administrator")">League Starter</a>
                    </div>

                </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Elo
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.PlayerList != null)
                        {
                            foreach (var elem in Model.PlayerList)
                            {
                                <tr>
                                    <td>
                                        @elem.Id
                                    </td>
                                    <td>
                                        @elem.Name
                                    </td>
                                    <td>
                                        @elem.Elo
                                    </td>
                                    <td>
                                        <a asp-action="DeletePlayer" asp-route-id="@elem.Id">Delete</a>|
                                        <a asp-action="PlayerEditor" asp-route-id="@elem.Id">Edit</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Points
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.AchievementList != null)
                        {
                            foreach (var elem in Model.AchievementList)
                            {
                                <tr>
                                    <td>
                                        @elem.Id
                                    </td>
                                    <td>
                                        @elem.Name
                                    </td>
                                    <td>
                                        @elem.Points
                                    </td>
                                    <td>
                                        <a asp-action="DeleteAchievement" asp-route-id="@elem.Id">Delete</a>|
                                        <a asp-action="EditAchievement" asp-route-id="@elem.Id">Edit</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="col">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Players
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.LeagueList != null)
                    {
                        foreach (var elem in Model.LeagueList)
                        {
                            <tr>
                                <td>
                                    @elem.Id
                                </td>
                                <td>
                                    @elem.Name
                                </td>
                                <td>
                                    @elem.Players
                                </td>
                                <td>
                                    <a asp-action="DeleteLeague" asp-route-id="@elem.Id">Delete</a>|
                                    <a asp-action="EditLeague" asp-route-id="@elem.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
            <div class="col">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Format
                        </th>
                        <th>
                            League
                        </th>
                        <th>
                            Is finished
                        </th>
                        <th>
                            Winner
                        </th>
                        <th>
                            Date
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model.EventsList != null)
                    {
                        foreach (var elem in Model.EventsList)
                        {
                            <tr>
                                <td>
                                    @elem.Id
                                </td>
                                <td>
                                    @elem.Format
                                </td>
                                <td>
                                    @elem.LeagueName
                                </td>
                                <td>
                                    @elem.isFinished
                                </td>
                                <td>
                                    @elem.Winner
                                </td>
                                <td>
                                    @elem.Date
                                </td>
                                <td>
                                    <a asp-action="DeleteEvent" asp-route-id="@elem.Id">Delete</a>|
                                    @if (!elem.isFinished)
                                    {
                                        <a asp-action="StartEvent" asp-route-id="@elem.Id">Start</a>
                                    }
                                    <a asp-action="CloseVoting" asp-route-id="@elem.Id">| Close Voting</a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

