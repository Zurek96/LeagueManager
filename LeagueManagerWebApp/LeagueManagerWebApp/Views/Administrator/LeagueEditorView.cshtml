@model List<LeagueModel>
@{
    ViewData["Title"] = "LeagueEditorView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LeagueEditorView</h2>

<div class="container-fluid">
    <div class="row justify-content-center">
        <form asp-controller="Administrator" asp-action="EditLeague" method="post">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col">
                        Player name: <br />
                    </div>
                    <div class="col">
                        <select name="Name">
                            @foreach (var elem in Model)
                            {
                                <option value="@(elem.Name)">@(elem.Name)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        Players: <br />
                    </div>
                    <div class="col">
                        <textarea form="data" cols="20" rows="10" name="Description"></textarea>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        <input type="submit" />
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>