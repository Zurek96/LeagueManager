
@{
    ViewData["Title"] = "PlayerCreatorView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PlayerCreatorView</h2>

<div class="container-fluid">
    <div class="row justify-content-center">
        <form asp-controller="Administrator" asp-action="CreatePlayer" method="post">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col">
                        Player name: <br />
                    </div>
                    <div class="col">
                        <input type="text" id="Name" name="Name" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col">
                        <input type="submit"/>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
