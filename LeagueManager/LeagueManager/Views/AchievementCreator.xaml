<Window x:Class="LeagueManager.Views.AchievementCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AchievementCreator" Height="450" Width="525">
    <Grid>
        <TextBox x:Name="AchName" HorizontalAlignment="Left" Height="23" Margin="125,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AchScore" HorizontalAlignment="Left" Height="23" Margin="125,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AchDesc" HorizontalAlignment="Left" Height="112" Margin="125,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="338"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Name"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,85,0,0" TextWrapping="Wrap" Text="Score" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,113,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="175,259,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
